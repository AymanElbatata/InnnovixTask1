                createAction: '/MealPrice/CreateOne',
                updateAction: '/MealPrice/UpdateOne',
                deleteAction: '/MealPrice/DeleteOne',
            },
            fields: {
                MealPriceID: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                MealPriceNum: {
                    title: 'MealPriceAmount',
                    inputClass: 'validate[required]'
                },
                MealTypeIDD: {
                    title: 'MealTypeIDD',
                    options: function (data) {
                        if (data.source == 'list') {
                            return '/MealType/Get_MealTypeIDD_List';
                        }
                        // ADD OR EDIT
                        else {
                            return '/MealType/Get_MealTypeIDD_ADDEDIT';
                        }
                    },
                    inputClass: 'validate[required]',
                },
                SeasonHolidayIDD: {
                    title: 'SeasonHolidayIDD',
                    options: function (data) {
                        if (data.source == 'list') {
                            return '/SeasonPHoliday/Get_SeasonHolidayIDD_List';
                        }
                        // ADD OR EDIT
                        else {
                            return '/SeasonPHoliday/Get_SeasonHolidayIDD_ADDEDIT';
                        }
                    },
                    inputClass: 'validate[required]',
                },
                IsStopped: {
                    title: 'Stopped',
                    type: 'checkbox',
                    defaultValue: 'false',
                    values: { 'false': 'No', 'true': 'Yes' },
                },
            },
            formCreated: function (event, data) {
                if (data.formType == "create") {
                    $(".ui-dialog-title").text("Add New");
                }
                else {
                    $(".ui-dialog-title").text("Modify");
                }
                $("#Edit-MealPriceNum").keydown(function (e) {
                    if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 190]) !== -1 ||
                        (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                        (e.keyCode >= 35 && e.keyCode <= 40)) {
                        return;
                    }
                    if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                        e.preventDefault();
                    }
                });

            },
            formSubmitting: function (event, data) {
                return data.form.validationEngine('validate');
            },
            formClosed: function (event, data) {
                data.form.validationEngine('hide');
                data.form.validationEngine('detach');
                $(".ui-dialog-title").text("Remove");
            },

        });
        $('#MealPrice').jtable('load');

    });
</script>

<div id="MealPrice" class="text-center"></div>

