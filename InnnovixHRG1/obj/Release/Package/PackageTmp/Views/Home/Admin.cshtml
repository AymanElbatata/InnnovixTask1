<script type="text/javascript">
    $(document).ready(function () {
        $('#SeasonPHoliday').jtable({
            title: 'SeasonPHoliday',
            paging: true,
            pageSize: 10,
            sorting: true,
            //defaultSorting: 'CourseName ASC',
            columnResizable: true,
            columnSelectable: true,
            saveUserPreferences: true,
            actions: {
                listAction: '/SeasonPHoliday/listAll',
                createAction: '/SeasonPHoliday/CreateOne',
                updateAction: '/SeasonPHoliday/UpdateOne',
                deleteAction: '/SeasonPHoliday/DeleteOne',
            },
            fields: {
                SeasonHolidayID: {
                    key: true,
                    create: false,
                    edit: false,
                    list: false
                },
                SeasonHolidayName: {
                    title: 'SeasonHolidayName',
                    inputClass: 'validate[required]'
                },
                SeasonHolidayFrom: {
                    title: 'SeasonHolidayFrom',
                    type: 'date',
                    inputClass: 'validate[required]'
                },
                SeasonHolidayTo: {
                    title: 'SeasonHolidayTo',
                    type: 'date',
                    inputClass: 'validate[required]'
                },
                IsStopped: {
                    title: 'Stopped',
                    type: 'checkbox',
                    defaultValue: 'false',
                    values: { 'false': 'No', 'true': 'Yes' },
                },
            },
            formCreated: function (event, data) {
                if (data.formType == "create") {
                    $(".ui-dialog-title").text("Add New");
                }
                else {
                    $(".ui-dialog-title").text("Modify");
                }
                $("#Edit-SeasonHolidayName").prop('maxlength', '50');

            },
            formSubmitting: function (event, data) {
                return data.form.validationEngine('validate');
            },
            formClosed: function (event, data) {
                data.form.validationEngine('hide');
                data.form.validationEngine('detach');
                $(".ui-dialog-title").text("Remove");
            },

        });
        $('#SeasonPHoliday').jtable('load');

    });
</script>

<div id="SeasonPHoliday" class="text-center"></div>

